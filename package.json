{
  "scripts": {
    "clean": "npx hardhat clean",
    "test": "npx hardhat test $(find test/unit -name '*.*s')",
    "test:integration": "npx hardhat test $(find test/integration -name '*.*s')",
    "test:gas": "REPORT_GAS=true npx hardhat test $(find test/unit -name '*.*s')",
    "chain": "npx hardhat node",
    "coverage": "SOLIDITY_COVERAGE=true npx hardhat coverage",
    "lint": " npx solhint contracts/**/*.sol ",
    "lint:fix": "npx solhint contracts/**/*.sol --fix --noPrompt",
    "format": "yarn prettier:solidity && yarn prettier:ts",
    "prettier:solidity": "npx prettier --plugin=prettier-plugin-solidity --write contracts/**/*.sol",
    "prettier:ts": "npx prettier --write test/**/*.ts",
    "biome": "npx @biomejs/biome check . ",
    "biome:fix": "npx @biomejs/biome format . --write ",
    "build": "npx hardhat compile",
    "compile": "npx hardhat compile",
    "deploy": "npx hardhat ignition deploy --parameters ignition/parameters.json ignition/modules/FullDeployment.ts",
    "deploy:local": "yarn deploy --network localhost ",
    "deploy:sepolia": "yarn deploy sepolia ",
    "prepare": "husky install",
    "postinstall": "husky install",
    "prepack": "pinst --disable",
    "postpack": "pinst --enable"
  },
  "dependencies": {
    "@openzeppelin/contracts": "^5.2.0",
    "@openzeppelin/contracts-upgradeable": "^5.2.0"
  },
  "devDependencies": {
    "@biomejs/biome": "1.9.4",
    "@nomicfoundation/hardhat-ignition": "^0.15.0",
    "@nomicfoundation/hardhat-ignition-viem": "^0.15.0",
    "@nomicfoundation/hardhat-network-helpers": "^1.0.0",
    "@nomicfoundation/hardhat-toolbox-viem": "^3.0.0",
    "@nomicfoundation/hardhat-verify": "^2.0.0",
    "@nomicfoundation/hardhat-viem": "^2.0.0",
    "@nomicfoundation/ignition-core": "^0.15.0",
    "@nomiclabs/hardhat-solhint": "^4.0.1",
    "@types/chai": "^4.2.0",
    "@types/chai-as-promised": "^7.1.6",
    "@types/chai-string": "^1.4.5",
    "@types/mocha": ">=9.1.0",
    "@types/node": ">=18.0.0",
    "chai": "^4.2.0",
    "chai-string": "^1.5.0",
    "hardhat": "^2.22.19",
    "hardhat-gas-reporter": "^1.0.8",
    "husky": "^9.1.7",
    "prettier": "^3.4.2",
    "prettier-plugin-solidity": "^1.4.2",
    "solhint": "^5.0.5",
    "solidity-coverage": "^0.8.0",
    "ts-node": ">=8.0.0",
    "typescript": "~5.0.4",
    "viem": "^2.7.6"
  }
}
