{
  "name": "contracts-exp",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "packages/contracts-exp/src",
  "projectType": "library",
  "targets": {
    "build": {
      "executor": "@nx/js:tsc",
      "options": {
        "outputPath": "dist/packages/contracts-exp",
        "tsConfig": "packages/contracts-exp/tsconfig.lib.json",
        "packageJson": "packages/contracts-exp/package.json",
        "main": "packages/contracts-exp/src/index.ts"
      }
    },
    "lint": {
      "executor": "nx:run-commands",
      "options": {
        "command": "yarn format && yarn lint",
        "cwd": "packages/contracts-exp"
      }
    },
    "test": {
      "executor": "@nx/jest:jest",
      "outputs": ["coverage/packages/contracts-exp"],
      "options": {
        "jestConfig": "packages/contracts-exp/jest.config.ts",
        "passWithNoTests": true
      }
    }
  }
}
